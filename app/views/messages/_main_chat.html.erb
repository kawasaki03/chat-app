
<div class="main-header">
 <div class="about-chat">
   <%=@room.name%>
 </div>
 <div class="chat-end-btn">
  <a href="#">チャットを終了する</a>
 </div>
</div>

<div class="messages">
   <%=render partial: 'message',collection: @messages%>
</div>



<%# <div class="form"> %>
<%= form_with model: [@room, @message],html:{class:"form"},local:true do |f|%>
  <div class="form-input">
    <%=f.text_field :content, class: "text-form", placeholder: "type a message"%>
    <%# <input type="text" class="text-form" placeholder="type a message"> %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%=f.file_field :image, class: "hidden"%>
    </label>
  </div>
    <%=f.submit "送信", class:"send-btn"%>
  <%# <input type="submit" value="送信" class="send-btn">  %>
  <%end%>
<%# </div> %>